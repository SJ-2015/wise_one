

<h1> 
	<%= @decision.user.first_name%>: 
	<%= @decision.name%>
</h1>

<div>
	 <%= link_to "Add New Factor", new_decision_factor_path(@decision), :class => "btn btn-primary", 'data-no-turbolink' => true %>
<div>

<h3>What are factors influencing your decision?</h3>


<div class="decision-factors">

  			<div class="col-xs-8 factor-scor"> <h4>Factors</h4> </div>

  			<div class="col-xs-4 factor-score"><h4>Importance</h4></div>

       		<% @factors.each do |factor| %>
        		<div class="col-xs-8 factor-name"> 
        			
        			<i class="fa fa-trash-o"> </i>     
            		<%= link_to 'Delete', decision_factor_path(factor.decision, factor), method: :delete, data: { confirm: 'Are you sure you want to delete this factor?' }, :class => "btn btn-danger" %>

        		<%= factor.name %> 
        		</div>
  			
  				<div class="col-xs-4 factor-scor"><%= factor.max_score %>
  				    <i class="fa fa-pencil-square-o"></i>
		            <%= link_to "Edit", edit_decision_factor_path(factor.decision, factor), method: :get, :class => "btn btn-info" %>
  				</div>
	        <br>

        <% end %>
</div>