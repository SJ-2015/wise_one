
<div class="page-container">
	<h1> 
		<%= @decision.user.first_name%>: 
		<%= @decision.name%>
	</h1>

	<div>
		 <%= link_to "Add New Factor", new_decision_factor_path(@decision), :class => "btn btn-primary", 'data-no-turbolink' => true %>
	<div>

	<h3>What are factors influencing your decision?</h3>


	<div class="decision-factors">

	  			<div class="col-xs-8 factor-scor"> <h4>Factors</h4> </div>

	  			<div class="col-xs-4 factor-score"><h4>Importance</h4></div>

	       		<% @factors.each do |factor| %>
	        		<div class="col-xs-8 factor-name">

	            		<%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, decision_factor_path(factor.decision, factor), method: :delete, data: { confirm: 'Are you sure you want to delete this factor?' }, class: 'btn btn-default' %>

	        		<%= factor.name %> 
	        		</div>
	  			
	  				<div class="col-xs-4 factor-scor"><%= factor.max_score %>
			            <%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_decision_factor_path(factor.decision, factor), method: :get, :class => "btn btn-default" %>
	  				</div>
		        <br>

	        <% end %>
	</div>

	<div class="col-xs-6 factor-scor">
		<div>
		 <%= link_to "Back: Decisions", user_path(@user.id), method: :get, :class => "btn btn-info" %>
		</div>
	</div>

	<div class="col-xs-6 factor-scor">
		<div>
		  <%= link_to "Next: Options", decision_options_path(@decision), method: :get, :class => "btn btn-info" %>
		</div>
	</div>

</div>


