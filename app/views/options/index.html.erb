	<h1> 
		<%= @decision.user.first_name%>: 
		<%= @decision.name%>
	</h1>

	<h3>What are your options?</h3>

	<div>
		 <h3>
		 	<%= link_to '<i class="fa fa-plus-circle"></i>'.html_safe, new_decision_option_path(@decision), 'data-no-turbolink' => true %> 
		 	<%= link_to 'Add New Option', new_decision_option_path(@decision), 'data-no-turbolink' => true %>
		 	
		 </h3>
	<div>


	<% @options.each do |option| %>
		<div > 
			<h3>
				<div class="col-xs-8 factor-name">
					<%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_decision_option_path(option.decision, option), method: :get %>
					<%= option.name %>
				</div>
			
				<div class="col-xs-4 factor-name"> 

					<div class="col-xs-4 factor-name"> 
						<i class="fa fa-commenting-o"></i>
					</div>
				
					<div class="col-xs-4 factor-name"> 

						<%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, decision_option_path(option.decision, option), method: :delete, data: { confirm: 'Are you sure you want to delete this option?', class: 'btn btn-default' } %>
					</div>


				</div>
			</h3>
		</div>
	<% end %>

	<div class="col-xs-6 factor-scor">
		<div>
		 <%= link_to "Back: Factors", decision_path(@decision), method: :get, :class => "btn btn-info" %>
		</div>
	</div>

	<div class="col-xs-6 factor-scor">
		<div>
		  <%= link_to "Next: Rank Options", change_score_decision_path(@decision.id), method: :get, :class => "btn btn-info" %>
		</div>
	</div>

